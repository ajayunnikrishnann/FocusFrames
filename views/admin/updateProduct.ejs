<script>
    const regex = /^(?!\s*$).+/;
    const priceRegex = /\b(?<!-)(?:\p{Sc})?\d{1,3}(?:[,.]?\d{3})*(?:[,.]\d{2})?\b/gu;


    const nameError = document.getElementById("name-error");
    const descriptionError = document.getElementById("description-error");
    const priceError = document.getElementById("price-error");

    const myform = document.getElementById("myform")

    function nameValidation() {
    const name = document.getElementById("name").value;
    const nameInput = document.getElementById("name");
    if (name.length == 0) {
      nameError.innerHTML = "Name is required";
      nameError.style.color = "red";
      nameInput.style.border = "solid 2px red";
      return false;
    }
    if (!name.match(regex)) {
      nameError.innerHTML = "Write valid Name";
      nameError.style.color = "red";
      nameInput.style.border = "solid 2px red";
      return false;
    } 
    nameError.innerHTML = "";
    nameError.style.color = "green";
    nameInput.style.border = "solid 2px green";
    return true;
  }
  function descriptionValidation() {
    const name = document.getElementById("description").value;
    const nameInput = document.getElementById("description");
    if (name.length == 0) {
        descriptionError.innerHTML = "Name is required";
        descriptionError.style.color = "red";
      nameInput.style.border = "solid 2px red";
      return false;
    }
    if (!name.match(regex)) {
        descriptionError.innerHTML = "Write valid Name";
        descriptionError.style.color = "red";
      nameInput.style.border = "solid 2px red";
      return false;
    } 
    descriptionError.innerHTML = "";
    descriptionError.style.color = "green";
    nameInput.style.border = "solid 2px green";
    return true;
  }

  function priceValidation() {
    const name = document.getElementById("price").value;
    const nameInput = document.getElementById("price");
    if (name.length == 0) {
        priceError.innerHTML = "Price is required";
        priceError.style.color = "red";
      nameInput.style.border = "solid 2px red";
      return false;
    }
    if (!name.match(priceRegex)) {
        priceError.innerHTML = "Write valid price";
        priceError.style.color = "red";
      nameInput.style.border = "solid 2px red";
      return false;
    } 
    priceError.innerHTML = "";
    priceError.style.color = "green";
    nameInput.style.border = "solid 2px green";
    return true;
  }
  myform.addEventListener("submit", (event) => {
    event.preventDefault();
    if (!nameValidation() || !priceValidation() || !descriptionValidation()) {
      return false;
    } else {
      myform.submit();
    }
  });
</script>

