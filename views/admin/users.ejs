    <script>
        function blockUser(userId)
{
    Swal.fire({
  title: 'Are you sure to Block?',
  text: "",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes,Block!',
  timer: 3000
}).then((result) => {
    if (result.isConfirmed) {
  $.ajax({
    url:'/admin/blockUser',
    method:'post',
    data: {
      userId: userId,
    },
    success:(response)=>
    {
      if(response)
      {
        location.reload()
      }
    }
  })
}
})
}

function unBlockUser(userId)
{
    console.log('unlock',userId);
  $.ajax({
    url:'/admin/unBlockUser',
    method:'post',
    data: {
      userId: userId,
    },
    success:(response)=>
    {
      if(response)
      {
        location.reload()
      }
    }
  })
}




</script>
